{
    "compilerOptions": {
        "declaration": true,
        "noImplicitAny": true,
        "diagnostics": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "lib": ["es5", "es6", "dom"],
        "typeRoots": [
            "src"
        ]
    },
    "compileOnSave": false,
    "target": "ES5",
    "module": "ES6",
    "include": [
        "src/**/*"
    ]
}